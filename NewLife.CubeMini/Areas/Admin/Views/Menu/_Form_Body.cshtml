                <div class="row">
<div class="form-group col-xs-12 col-sm-6">
    <label class="control-label col-xs-3 col-sm-3">扩展1</label>
    <div class="input-group col-xs-9 col-sm-9">
        @Html.TextBox("Ex1", @entity.Ex1, new { @class = "form-control", role="number" })
    </div>
</div>
<div class="form-group col-xs-12 col-sm-6">
    <label class="control-label col-xs-3 col-sm-3">扩展2</label>
    <div class="input-group col-xs-9 col-sm-9">
        @Html.TextBox("Ex2", @entity.Ex2, new { @class = "form-control", role="number" })
    </div>
</div>
<div class="form-group col-xs-12 col-sm-6">
    <label class="control-label col-xs-3 col-sm-3">扩展3</label>
    <div class="input-group col-xs-9 col-sm-9">
        @Html.TextBox("Ex3", @entity.Ex3, new { @class = "form-control" })
    </div>
</div>
<div class="form-group col-xs-12 col-sm-6">
    <label class="control-label col-xs-3 col-sm-3">帮助文档链接</label>
    <div class="input-group col-xs-9 col-sm-5">
        <input class="form-control" id="Ex4" name="Ex4" type="text" value="@entity.Ex4" />
    </div>
    <span class="hidden-xs col-sm-4"><span class="middle">扩展4</span></span>
</div>
<div class="form-group col-xs-12 col-sm-6">
    <label class="control-label col-xs-3 col-sm-3">扩展5</label>
    <div class="input-group col-xs-9 col-sm-9">
        <input class="form-control" id="Ex5" name="Ex5" type="text" value="@entity.Ex5" />
    </div>
</div>
<div class="form-group col-xs-12 col-sm-6">
    <label class="control-label col-xs-3 col-sm-3">扩展6</label>
    <div class="input-group col-xs-9 col-sm-9">
        <input class="form-control" id="Ex6" name="Ex6" type="text" value="@entity.Ex6" />
    </div>
</div>
<div class="form-group col-xs-12 col-sm-6">
    <label class="control-label col-xs-3 col-sm-3">创建者</label>
    <div class="input-group col-xs-9 col-sm-9">
        <input class="form-control" id="CreateUser" name="CreateUser" type="text" value="@entity.CreateUser" />
    </div>
</div>
<div class="form-group col-xs-12 col-sm-6">
    <label class="control-label col-xs-3 col-sm-3">创建用户</label>
    <div class="input-group col-xs-9 col-sm-9">
        @Html.TextBox("CreateUserID", @entity.CreateUserID, new { @class = "form-control", role="number" })
    </div>
</div>
<div class="form-group col-xs-12 col-sm-6">
    <label class="control-label col-xs-3 col-sm-3">创建地址</label>
    <div class="input-group col-xs-9 col-sm-9">
        <input class="form-control" id="CreateIP" name="CreateIP" type="text" value="@entity.CreateIP" />
    </div>
</div>
<div class="form-group col-xs-12 col-sm-6">
    <label class="control-label col-xs-3 col-sm-3">创建时间</label>
    <div class="input-group col-xs-9 col-sm-9">
        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
        @Html.TextBox("CreateTime", @entity.CreateTime.ToFullString(""), new { @class = "form-control date form_datetime" })
    </div>
</div>
<div class="form-group col-xs-12 col-sm-6">
    <label class="control-label col-xs-3 col-sm-3">更新者</label>
    <div class="input-group col-xs-9 col-sm-9">
        <input class="form-control" id="UpdateUser" name="UpdateUser" type="text" value="@entity.UpdateUser" />
    </div>
</div>
<div class="form-group col-xs-12 col-sm-6">
    <label class="control-label col-xs-3 col-sm-3">更新用户</label>
    <div class="input-group col-xs-9 col-sm-9">
        @Html.TextBox("UpdateUserID", @entity.UpdateUserID, new { @class = "form-control", role="number" })
    </div>
</div>
<div class="form-group col-xs-12 col-sm-6">
    <label class="control-label col-xs-3 col-sm-3">更新地址</label>
    <div class="input-group col-xs-9 col-sm-9">
        <input class="form-control" id="UpdateIP" name="UpdateIP" type="text" value="@entity.UpdateIP" />
